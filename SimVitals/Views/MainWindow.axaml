<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SimVitals.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SimVitals.Views"
        mc:Ignorable="d" d:DesignWidth="1250" d:DesignHeight="750"
        x:Class="SimVitals.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SimVitals Pro - Medical Training Simulation"
        Width="1400" Height="780"
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

 <Grid ColumnDefinitions="320,*,320">
        
        <!-- Left Panel - Manikin Control -->
        <Border Grid.Column="0" Background="#2C3E50" BorderBrush="#3498DB" BorderThickness="0,0,3,0">
            <ScrollViewer>
                <StackPanel Margin="20">
                    <TextBlock Text="ðŸ¥ SimMan Control" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,25"/>
                    
                    <!-- Manikin Status -->
                    <Border Background="#34495E" 
                            CornerRadius="12" 
                            Padding="20" 
                            Margin="0,0,0,25"
                            BorderBrush="#3498DB" 
                            BorderThickness="1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="#3498DB" 
                                        CornerRadius="30" 
                                        Width="60" 
                                        Height="60">
                                    <TextBlock Text="ðŸ‘¤" 
                                               FontSize="24" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="15,0,0,0">
                                    <TextBlock Text="SimMan Essential" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               Foreground="White"/>
                                    <TextBlock Text="Serial: SM001-2024" 
                                               FontSize="12" 
                                               Foreground="#BDC3C7"/>
                                    <TextBlock Text="â— Connected" 
                                               FontSize="12" 
                                               Foreground="#27AE60"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Status Info -->
                            <Grid ColumnDefinitions="*,*,*">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Battery" 
                                               FontSize="12" 
                                               Foreground="#BDC3C7" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="89%" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#27AE60" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Temp" 
                                               FontSize="12" 
                                               Foreground="#BDC3C7" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="36.8Â°C" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Session" 
                                               FontSize="12" 
                                               Foreground="#BDC3C7" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding CurrentSession.SessionDuration}" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Current Scenario -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Current Scenario" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,10"/>
                        <Border Background="#27AE60" 
                                CornerRadius="8" 
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentScenario}" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                                <TextBlock Text="Baseline physiological state" 
                                           FontSize="12" 
                                           Foreground="#BDC3C7" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Scenario Buttons -->
                    <StackPanel>
                        <TextBlock Text="Training Scenarios" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,15"/>
                        
                        <Button Content="ðŸ’” Cardiac Arrest" 
                                Background="#E74C3C" 
                                Foreground="White" 
                                Padding="15" 
                                Margin="0,0,0,10" 
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding TriggerCardiacEventCommand}"/>
                        
                        <Button Content="ðŸš¨ Anaphylactic Shock" 
                                Background="#C0392B" 
                                Foreground="White" 
                                Padding="15" 
                                Margin="0,0,0,10" 
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding TriggerAnaphylaxisCommand}"/>
                        
                        <Button Content="ðŸ§  Acute Stroke" 
                                Background="#8E44AD" 
                                Foreground="White" 
                                Padding="15" 
                                Margin="0,0,0,10" 
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding TriggerStrokeCommand}"/>
                        
                        <Button Content="ðŸ§ª Test Safety System" 
                                Background="#9B59B6" 
                                Foreground="White" 
                                Padding="15" 
                                Margin="0,0,0,10" 
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding TestSafetySystemCommand}"/>
                        
                        <Button Content="âœ… Return to Normal" 
                                Background="#F39C12" 
                                Foreground="White" 
                                Padding="15" 
                                Margin="0,0,0,20" 
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding NormalizeVitalsCommand}"/>
                        
                        <Button Content="ðŸ›‘ EMERGENCY STOP" 
                                Background="#C0392B" 
                                Foreground="White" 
                                Padding="15" 
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding EmergencyStopCommand}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Center Panel - Vitals Display -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="30">
                
                <!-- Patient Header -->
                <Border Background="White" 
                        CornerRadius="15" 
                        Padding="25" 
                        Margin="0,0,0,25"
                        BoxShadow="0 5 20 #19000000" >
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Training Simulation" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"/>
                            <TextBlock Text="{Binding CurrentSession.PatientToken, StringFormat='Patient Token: {0} | Instructor: Dr. Sarah Johnson'}" 
                                       FontSize="14" 
                                       Foreground="#7F8C8D" 
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding CurrentVitals.Timestamp, StringFormat='Last Update: {0:HH:mm:ss}'}" 
                                       FontSize="12" 
                                       Foreground="#95A5A6" 
                                       Margin="0,5,0,0"/>
                            
                            <TextBlock Text="{Binding AnimationStatus}" 
                                       FontSize="12" 
                                       Foreground="#E67E22" 
                                       Margin="0,5,0,0"
                                       IsVisible="{Binding IsAnimating}"/>
                        </StackPanel>
                        <Border Grid.Column="1" 
                                Background="#27AE60" 
                                CornerRadius="20" 
                                Padding="12,8">
                            <TextBlock Text="ISO 13485 âœ“" 
                                       FontSize="12" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Vitals Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" Margin="0,0,0,25">
                    
                    <!-- Heart Rate -->
                    <Border Grid.Column="0" Grid.Row="0" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="25" 
                            Margin="0,0,12,25"
                            BoxShadow="0 5 20 #19000000"
                            Name="HeartRateCard" >
                        <StackPanel>
                            <Border Background="#E74C3C" Height="4" CornerRadius="2" Margin="0,0,0,15"/>
                            <TextBlock Text="â¤ï¸ Heart Rate" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#7F8C8D" 
                                       Margin="0,0,0,10"/>
                            <TextBlock FontSize="42" 
                                       FontWeight="Bold" 
                                       Foreground="#E74C3C"
                                       Classes="vitals-value"
                                       Name="HeartRateValue">
                                <Run Text="{Binding CurrentVitals.HeartRate}"/>
                                <Run Text=" BPM" FontSize="16" Foreground="#95A5A6"/>
                            </TextBlock>
                            <TextBlock Text="{Binding HeartRateStatus}" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Blood Pressure -->
                    <Border Grid.Column="1" Grid.Row="0" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="25" 
                            Margin="12,0,0,25"
                            BoxShadow="0 5 20 #19000000">
                        <StackPanel>
                            <Border Background="#3498DB" Height="4" CornerRadius="2" Margin="0,0,0,15"/>
                            <TextBlock Text="ðŸ©¸ Blood Pressure" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#7F8C8D" 
                                       Margin="0,0,0,10"/>
                            <TextBlock FontSize="42" FontWeight="Bold" Foreground="#3498DB">
                                <Run Text="{Binding CurrentVitals.BloodPressure}"/>
                                <Run Text=" mmHg" FontSize="16" Foreground="#95A5A6"/>
                            </TextBlock>
                            <TextBlock Text="Normal: &lt;120/80 mmHg" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Oxygen Saturation -->
                    <Border Grid.Column="0" Grid.Row="1" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="25" 
                            Margin="0,0,12,25"
                            BoxShadow="0 5 20 #19000000">
                        <StackPanel>
                            <Border Background="#27AE60" Height="4" CornerRadius="2" Margin="0,0,0,15"/>
                            <TextBlock Text="ðŸ« Oxygen Saturation" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#7F8C8D" 
                                       Margin="0,0,0,10"/>
                            <TextBlock FontSize="42" FontWeight="Bold" Foreground="#27AE60">
                                <Run Text="{Binding CurrentVitals.OxygenSaturation}"/>
                                <Run Text=" %" FontSize="16" Foreground="#95A5A6"/>
                            </TextBlock>
                            <TextBlock Text="Normal: 95-100%" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Respiratory Rate -->
                    <Border Grid.Column="1" Grid.Row="1" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="25" 
                            Margin="12,0,0,25"
                            BoxShadow="0 5 20 #19000000">
                        <StackPanel>
                            <Border Background="#F39C12" Height="4" CornerRadius="2" Margin="0,0,0,15"/>
                            <TextBlock Text="ðŸ’¨ Respiratory Rate" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#7F8C8D" 
                                       Margin="0,0,0,10"/>
                            <TextBlock FontSize="42" FontWeight="Bold" Foreground="#F39C12">
                                <Run Text="{Binding CurrentVitals.RespiratoryRate}"/>
                                <Run Text=" /min" FontSize="16" Foreground="#95A5A6"/>
                            </TextBlock>
                            <TextBlock Text="Normal: 12-20 /min" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- ECG Display Area -->
                <Border Background="#0F1419" 
                        Height="200" 
                        CornerRadius="8" 
                        BorderBrush="#34495E" 
                        BorderThickness="2">
                    <Grid>
                        <!-- ECG Waveform Control -->
                        <views:EcgWaveformControl HeartRate="{Binding CurrentVitals.HeartRate}"
                                                  RhythmType="{Binding EcgRhythmType}"
                                                  Width="550" 
                                                  Height="200"/>
        
                        <!-- Overlay Information -->
                        <StackPanel VerticalAlignment="Top" 
                                    HorizontalAlignment="Left" 
                                    Margin="15,10">
                            <TextBlock Text="{Binding CurrentVitals.HeartRate, StringFormat='HR: {0} BPM'}" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#00FF41"/>
                            <TextBlock Text="{Binding EcgRhythmType}" 
                                       FontSize="11" 
                                       Foreground="#00FF41"/>
                        </StackPanel>
        
                        <!-- Technical Info -->
                        <StackPanel VerticalAlignment="Top" 
                                    HorizontalAlignment="Right" 
                                    Margin="15,10">
                            <TextBlock Text="Lead II" 
                                       FontSize="11" 
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding EcgSignalQuality}" 
                                       FontSize="10" 
                                       Foreground="#95A5A6"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Right Panel - Compliance & Audit -->
        <Border Grid.Column="2" Background="#34495E" BorderBrush="#27AE60" BorderThickness="3,0,0,0">
            <ScrollViewer>
                <StackPanel Margin="20">
                    
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                        <TextBlock Grid.Column="0"
                                   Text="ðŸ›¡ï¸ Compliance Dashboard"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White" />
                        <Button Grid.Column="1"
                                Content="â†»"
                                Background="#3498DB"
                                Foreground="White"
                                Width="35" Height="35"
                                FontSize="18"
                                CornerRadius="17"
                                Command="{Binding CompliancePanel.RefreshDataCommand}">
                
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Transitions">
                                        <Transitions>
                                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.5" />
                                        </Transitions>
                                    </Setter>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="RenderTransform" Value="rotate(180deg)" />
                                </Style>
                            </Button.Styles>
                
                        </Button>
                    </Grid>

                    <!-- Live Compliance Score -->
                    <Border Background="#2C3E50" 
                            CornerRadius="10" 
                            Padding="15" 
                            Margin="0,0,0,15"
                            BorderBrush="#27AE60" 
                            BorderThickness="1"
                            Classes="dashboard-card">
                        <StackPanel>
                            <TextBlock Text="Compliance Score" 
                                       FontWeight="Bold" 
                                       Foreground="#27AE60" 
                                       Margin="0,0,0,10"/>
        
                            <TextBlock Text="{Binding CompliancePanel.DashboardData.ComplianceScore, StringFormat='{}{0:F1}%'}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"
                                       Classes="vitals-value"/>
                   
                            <TextBlock Text="{Binding CompliancePanel.DashboardData.LastUpdated, StringFormat='Updated: {0:HH:mm:ss}'}"
                                       FontSize="10"
                                       Foreground="#95A5A6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- System Health Metrics -->
                    <Border Background="#2C3E50"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,15"
                            BorderBrush="#3498DB"
                            BorderThickness="2"
                            Classes="dashboard-card">
                        <StackPanel>
                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                                <TextBlock Grid.Column="0"
                                           Text="ðŸ¥ System Health"
                                           FontWeight="Bold"
                                           Foreground="#3498DB" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding CompliancePanel.HealthStatus}"
                                           FontSize="10"
                                           Foreground="#27AE60" />
                            </Grid>

<Grid ColumnDefinitions="Auto,*,70"
      RowDefinitions="Auto,Auto,Auto,Auto">

    <!-- CPU -->
    <Border Width="40" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
        <TextBlock Text="CPU:" 
                   FontSize="12" 
                   Foreground="#BDC3C7"
                   VerticalAlignment="Center"/>
    </Border>

    <ProgressBar Grid.Row="0" Grid.Column="1"
                 Value="{Binding CompliancePanel.SystemHealth.CpuUsagePercent}"
                 Maximum="100"
                 Height="8"
                 CornerRadius="4"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left" />

    <Border Width="80" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right">
        <TextBlock Text="{Binding CompliancePanel.SystemHealth.CpuUsagePercent, StringFormat='{}{0:F1}%'}"
                   FontSize="11"
                   Foreground="#E67E22"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
    </Border>

    <!-- RAM -->
    <Border Width="40" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">
        <TextBlock Text="RAM:" 
                   FontSize="12" 
                   Foreground="#BDC3C7"
                   VerticalAlignment="Center"/>
    </Border>

    <ProgressBar Grid.Row="1" Grid.Column="1"
                 Value="{Binding SystemMemoryMb}"
                 Maximum="500"
                 Height="8"
                 CornerRadius="4"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left" />

    <Border Width="30" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right">
        <TextBlock Text="{Binding SystemMemoryMb, StringFormat='{}{0}MB'}"
                   FontSize="11"
                   Foreground="#E67E22"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
    </Border>

    <!-- Response -->
    <Border Width="40" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left">
        <TextBlock Text="Resp:" 
                   FontSize="12" 
                   Foreground="#BDC3C7"
                   VerticalAlignment="Center"/>
    </Border>

    <ProgressBar Grid.Row="2" Grid.Column="1"
                 Value="{Binding AverageResponseTimeMs}"
                 Maximum="100"
                 Height="8"
                 CornerRadius="4"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left" />

    <Border Width="80" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right">
        <TextBlock Text="{Binding AverageResponseTimeMs, StringFormat='{}{0:F1}ms'}"
                   FontSize="11"
                   Foreground="#E67E22"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
    </Border>

    <!-- Errors -->
    <Border Width="40" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left">
        <TextBlock Text="Errors:" 
                   FontSize="12" 
                   Foreground="#BDC3C7"
                   VerticalAlignment="Center"/>
    </Border>

    <ProgressBar Grid.Row="3" Grid.Column="1"
                 Value="{Binding CompliancePanel.SystemHealth.ErrorRate}"
                 Maximum="10"
                 Height="8"
                 CornerRadius="4"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left" />

    <Border Width="80" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right">
        <TextBlock Text="{Binding CompliancePanel.SystemHealth.ErrorRate, StringFormat='{}{0}%'}"
                   FontSize="11"
                   Foreground="#E67E22"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
    </Border>
</Grid>




                        </StackPanel>
                    </Border>

                    <!-- Add health check button -->
                    <Button Content="ðŸ” Full Health Check"
                            Background="#8E44AD"
                            Foreground="White"
                            Padding="15,10"
                            FontWeight="Bold"
                            Margin="0,0,0,10"
                            Command="{Binding CompliancePanel.RunFullHealthCheckCommand}" />

                    <!-- Compliance Standards -->
                    <Border Background="#2C3E50"
                            CornerRadius="10"
                            Padding="15"
                            Margin="0,0,0,15"
                            BorderBrush="#E67E22"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Regulatory Standards"
                                       FontWeight="Bold"
                                       Foreground="#E67E22"
                                       Margin="0,0,0,10" />

                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,3">
                                <TextBlock Grid.Column="0" Text="HIPAA Status" Foreground="White" FontSize="11" />
                                <TextBlock Grid.Column="1" Text="âœ“ Compliant" Foreground="#27AE60" FontSize="11" />
                            </Grid>

                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,3">
                                <TextBlock Grid.Column="0" Text="ISO 13485" Foreground="White" FontSize="11" />
                                <TextBlock Grid.Column="1" Text="âœ“ Validated" Foreground="#27AE60" FontSize="11" />
                            </Grid>

                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,3">
                                <TextBlock Grid.Column="0" Text="Data Encryption" Foreground="White" FontSize="11" />
                                <TextBlock Grid.Column="1" Text="AES-256" Foreground="#27AE60" FontSize="11" />
                            </Grid>

                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" Text="Session Timeout" Foreground="White" FontSize="11" />
                                <TextBlock Grid.Column="1" Text="8h" Foreground="#27AE60" FontSize="11" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <StackPanel Margin="0,0,0,15">
                        <Button Content="ðŸ“Š Export Compliance Report"
                                Background="#8E44AD"
                                Foreground="White"
                                Padding="10"
                                FontSize="11"
                                FontWeight="Bold"
                                CornerRadius="5"
                                Command="{Binding CompliancePanel.ExportComplianceReportCommand}" />
                    </StackPanel>

                    <!-- Simplified Audit Log -->
                    <TextBlock Text="ðŸ“‹ Recent Audit Log"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10" />

                    <ScrollViewer Height="200">
                        <ItemsControl ItemsSource="{Binding AuditEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2C3E50"
                                            CornerRadius="5"
                                            Margin="0,3"
                                            Padding="8"
                                            BorderBrush="#3498DB"
                                            BorderThickness="0,0,0,1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding TimeString}"
                                                       FontSize="9"
                                                       Foreground="#BDC3C7" />
                                            <TextBlock Text="{Binding Action}"
                                                       FontWeight="Bold"
                                                       FontSize="10"
                                                       Foreground="White"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>

</Window>